<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/full_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <view
        android:id="@+id/video_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        class="com.appunite.ffmpeg.FFmpegSurfaceView"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#a8000000"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="marquee"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="#ffffffff"
            android:textSize="14.0sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!--
        이 위치에 배터리 상태, 시간 삽입
        <ImageButton
            android:id="@+id/screen_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingRight="10dp"
            android:src="@drawable/rotate_norm" />
        -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/unhold_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageButton
            android:id="@+id/unhold_button"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="#a8000000"
            android:padding="10dip"
            android:src="@drawable/lock" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#a8000000"
        android:visibility="gone" >

        <TextView
            android:id="@+id/current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="18.0dip"
            android:paddingLeft="8.0dip"
            android:paddingRight="8.0dip"
            android:paddingTop="15.0dip" />

        <TextView
            android:id="@+id/total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="18.0dip"
            android:paddingLeft="8.0dip"
            android:paddingRight="8.0dip"
            android:paddingTop="15.0dip" />

        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/total_time"
            android:layout_toRightOf="@+id/current_time"
            android:paddingBottom="18.0dip"
            android:paddingLeft="8.0dip"
            android:paddingRight="8.0dip"
            android:paddingTop="18.0dip"
            android:progressDrawable="@drawable/video_progress"
            android:thumb="@null" />

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/seek_bar" >

            <ImageButton
                android:id="@+id/hold_video"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:background="@null"
                android:src="@drawable/lock" />

            <ImageButton
                android:id="@+id/prev_video"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:background="@null"
                android:onClick="onClick"
                android:src="@drawable/prev" />

            <ImageButton
                android:id="@+id/play_pause"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:background="@null"
                android:contentDescription="@null"
                android:enabled="false"
                android:src="@drawable/play" />

            <ImageButton
                android:id="@+id/next_video"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:background="@null"
                android:onClick="onClick"
                android:src="@drawable/next" />

            <ImageButton
                android:id="@+id/btn_ppl"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:background="@null"
                android:src="@drawable/ic_launcher" />
        </LinearLayout>
    </RelativeLayout>

    <SlidingDrawer
        android:id="@+id/slide"
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:allowSingleTap="true"
        android:animateOnClick="true"
        android:bottomOffset="5dp"
        android:content="@+id/content"
        android:handle="@+id/handle"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:topOffset="0dp" >

         <ImageView
            android:id="@+id/handle"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
            <!--  android:src="@drawable/ic_launcher" -->
 
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#a8000000" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SlidingDrawer의 content 부분입니다." />

            <Button
                android:id="@+id/btn_slide"
                android:onClick="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닫기" />
        </LinearLayout>
    </SlidingDrawer>

    <RelativeLayout
        android:id="@+id/volume_brightness_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" >

        <TextView
            android:id="@+id/volume_brightness_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#FFFFFFFF"
            android:textSize="60sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/seek_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" >

        <TextView
            android:id="@+id/seek_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#FFFFFFFF"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/seek_small_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seek_value"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFFFF"
            android:textSize="30sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_ppl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <ListView
            android:id="@+id/lv_ppl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_ppl" />

        <TextView
            android:id="@+id/tv_ppl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/lv_ppl"
            android:layout_alignParentRight="true"
            android:text="PPL Information" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_smi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:textSize="20sp" />

</RelativeLayout>