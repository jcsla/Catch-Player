<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="280dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@layout/rounded"
        android:orientation="vertical"
        android:padding="15dp" >

        <ImageView
            android:id="@+id/iv_ppl_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp" />
        
        <TextView
            android:id="@+id/tv_ppl_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_ppl_image"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"/>
        
        <TextView
            android:id="@+id/tv_ppl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ppl_brand"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/black" />
        
        <TextView
            android:id="@+id/tv_ppl_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:layout_below="@id/tv_ppl_title"
            android:textColor="@android:color/black" />
    </RelativeLayout>

</RelativeLayout>